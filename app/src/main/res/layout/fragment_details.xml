<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/typical_vertical_margin"
            android:text="@string/app_name"
            android:textColor="?colorPrimary"
            android:textSize="@dimen/text_size_title" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/typical_vertical_margin"
            android:hint="@string/baby_name"
            android:inputType="textPersonName"
            android:maxLines="1" />

        <DatePicker
            android:id="@+id/dpBirthday"
            style="@style/DatePickerSpinnerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/typical_vertical_margin" />

        <ImageView
            android:id="@+id/ivBabyPhoto"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/typical_vertical_margin"
            tools:src="@drawable/ic_launcher_background" />

        <Button
            android:id="@+id/bSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/typical_vertical_margin"
            android:layout_marginBottom="@dimen/typical_vertical_margin"
            android:text="@string/details_button_text" />
    </LinearLayout>
</ScrollView>